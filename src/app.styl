@import "reset.css";

$ldred = #b30000;

body { background-color: #eeeeee; }

div.app {
    font-family: "Open Sans",Arial,sans-serif;

    .topbar {
        position: fixed;
        width: 100%;
        height: 60px;
        background: url(img/ldlogo.png) left center/100px no-repeat $ldred;
        h1 {
            line-height: 60px;
            color: white;
            font-size: 1.5rem;
            font-weight: bold;
            margin-left: 100px;
        }
    }

    div.spacer { height: 60px; }

    div.card {
        background-color: white;
        margin: 0.5rem;
        padding: 0.3rem;
        font-size: 12pt;
        border: 1px solid #999999;
        border-radius: 5px;
        box-shadow: 0px 3px 3px 0px #dddddd;

        div.input {
            margin-top: 0.5rem;
            margin-bottom: 0.5rem;
            label {
                width: 40%; display: inline-block; text-align: center; font-size: 1.3rem;
                &.inset { width: 2rem; margin-left: -2rem; text-align: right; }
            }
            input {
                font-size: 1.3rem;
                font-family: monospace;
                padding: 5px;
                width: 55%;
                border: none;
                border-bottom: 2px solid $ldred;
                outline: none;
                &:focus { outline: none; }
            }
        }

        div.tapper {
            padding: 0px;
            width: 100%;
            display: table;
            table-layout: fixed;
            border-collapse: collapse;
            > div {
                height: 3.5rem;
                padding: 0px;
                display: table-cell;
                text-align: center;
                vertical-align: middle;

                label { margin: 0px; padding: 0px; display: block; }
                div.packs { font-size: 2rem; font-family: monospace; }

                button {
                    background-color: $ldred;
                    color: white;
                    border: none;
                    border-radius: 5px;
                    display: block;
                    width: 100%;
                    height: 100%;
                    font-size: 2rem;

                    &.disabled { background-color: #dddddd; }
                }
            }
        }

        div.stats {
            display: table;
            width: 100%;
            table-layout: fixed;
            border-top: 1px solid #666666;
            margin-top: 0.1rem;
            border-collapse: collapse;

            > div {
                display: table-cell;
                text-align: center;
                font-size: 0.9rem;
                font-family: monospace;

                div.cbox {
                    border-radius: 3px;
                    margin-top: 0.2rem;
                    &.green { background: #64e986; }
                    &.yellow { background: #ffdb58; }
                    &.red { background: #f75d59; }
                }
             }
        }

        table {
            width: 100%;
            font-size: 0.9rem;
            text-align: left;
            vertical-align: middle;

            th { padding: 0.1rem; font-weight: bold; }
            td { padding: 0.1rem; font-family: monospace; }
            span { font-size: 0.8em; color: #999999; }

            .right { text-align: right; }

            tbody tr {
                border-top: 1px solid black;
                &.selected {
                    background-color: #ffdddd;
                }
            }
        }

    }

    div.results {
        position: fixed;
        background-color: white;
        border-top: 1px solid #dddddd;
        box-shadow: 0px -2px -3px 0px #dddddd;
        bottom: 0px;
        left: 0px;
        width: 100%;
        height: 3rem;
        display: table;
        table-layout: fixed;
        border-collapse: separate;
        border-spacing: 0.5rem;

        > div {
            display: table-cell;
            text-align: center;
            height: 100%;
            vertical-align: middle;
            position: relative;

            label {
                position: absolute;
                padding-top: 0.2rem;
                bottom: -0.3rem;
                font-size: 0.8rem;
                border-top: 1px solid black; width: 100%; display: block;
            }

            div.result {
                font-family: monospace;
                font-size: 1.5rem;
                margin-bottom: 0.4rem;
            }
        }

        div.reset {
            width: 3rem;
            button {
                width: 2.4rem; height: 2.4rem; font-size: 1.5rem; background-color: $ldred;
                border-radius: 1.2rem; border: 2px solid #ff9999; color: white; font-weight: bold;
            }
        }

    }
}
